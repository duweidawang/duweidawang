<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.dao.StoreDao">
    <insert id="insert">
        insert into store
        values (null, #{store.name}, #{store.address}, #{store.thumbnail}, #{store.avatar_url},
                #{store.summary}, #{store.description}, #{store.star}, #{store.status});
    </insert>
    <update id="updateById">
        update store
        <set>
            <if test="store.name != null">
                name = #{store.name}
            </if>
            <if test="store.address != null">
                address = #{store.address}
            </if>
            <if test="store.thumbnail">
                thumbnail = #{store.thumbnail}
            </if>
            <if test="store.avatar_url != null">
                avatar_url = #{store.avatarUrl}
            </if>
            <if test="store.summary">
                summary = #{store.summary}
            </if>
            <if test="store.description != null">
                description = #{store.description}
            </if>
            <if test="store.star != null">
                star = #{store.star}
            </if>
            <if test="store.status != null">
                status = #{store.status}
            </if>
        </set>
    </update>

    <select id="page" resultType="com.example.entity.Store">
        select *
        from store
    </select>
</mapper>